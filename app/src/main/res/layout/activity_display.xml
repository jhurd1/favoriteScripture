<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayActivity">

    <TextView
        android:id="@+id/lblScripture"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="Favorite Scripture"

        />

    <Button
        android:id="@+id/saveScripture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblScripture"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="172dp"
        android:layout_marginBottom="100dp"
        android:text="Save Scripture"
        app:layout_constraintBottom_toBottomOf="@+id/lblScripture"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>